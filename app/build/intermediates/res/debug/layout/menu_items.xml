<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/menu_state"
     >

    
    
    <ImageView
        android:id="@+id/items_iv"
        android:layout_marginLeft="15dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/lottery_numbers_press"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/items_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/items_iv"
        android:padding="@dimen/text_padding"
        android:singleLine="true"
        android:text="彩种选择"
        android:layout_marginLeft="25dip"
        android:textSize="@dimen/menu_text_size" />
    
    <TextView
        android:id="@+id/items_btn_message"
        android:layout_toRightOf="@id/items_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/menu_msg"
        android:paddingLeft="15dip"
        android:paddingRight="15dip"
        android:paddingTop="5dip"
        android:paddingBottom="5dip"
        android:layout_centerVertical="true"
		android:text="88"
		android:textColor="@android:color/white"
		/>
    

