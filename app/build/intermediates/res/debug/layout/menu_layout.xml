<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/menu_fl"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@drawable/bk_repeat"
    >

    <TextView 
        android:id="@+id/menu_user_name"
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_centerHorizontal="true"
    	android:text="Daniel"
    	android:textSize="@dimen/menu_text_size"
    	android:layout_marginTop="30dip"
    	android:layout_marginBottom="5dip"
        />
    <LinearLayout 
        android:id="@+id/menu_user_money"
        android:layout_below="@+id/menu_user_name"
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:padding="10dip"
    	android:background="#0E0E0E"
        >
    <TextView 
        android:layout_marginLeft="10dip"
        android:id="@+id/menu_user_money_is"
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
        android:background="@drawable/menu_money"
        android:text="余额"
        android:gravity="center"
        android:textSize="@dimen/menu_money_text_size"
        android:textColor="@android:color/white"
        />
    <TextView 
        android:layout_marginLeft="20dip"
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:text="8,888,888,888.8888"
    	android:textSize="@dimen/menu_money_text_size"
    	android:textColor="#ff7206"
        />
    </LinearLayout>
    <ListView
        android:layout_below="@+id/menu_user_money"
        android:id="@+id/menu_lv"
        android:cacheColorHint="#00000000"
        android:divider="@null"
        android:scrollbars="none"
        android:dividerHeight="0dp"
        android:listSelector="#00000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </ListView>

